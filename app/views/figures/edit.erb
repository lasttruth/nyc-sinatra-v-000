<h1>Update Figure:</h1>

<form action='/figures/<%=@figure.id%>' method='post'>
<input id="hidden" type="hidden" name="_method" value="patch">

<h3>Figure Name:<input type='text' name='figure[name]' id='figure_name' value='<%=@figure.name%>' placeholder='<%=@figure.name%>'></h3>

<h3>Landmark:</h3>
    <ul>
    <%@landmarks.each do |landmark|%>
    <li><input type="checkbox" name="figure[landmark_ids][]" id='landmark_<%= landmark.id %>' value="<%= landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark)%>><%=landmark.name%></li>
    <%end%>
    </ul>
    <h4>Or Enter a New Landmark Here:</h4>
        <label>Name:</label>
         <input type="text" id="new_landmark" name="landmark[name]">
        <label>Year:</label>
         <input type="text" name="landmark[year_completed]">

<h3>Title:</h3>
    <ul>
    <%@titles.each do |title|%>
    <li><input type='checkbox' name='figure[title_ids][]' id='title_<%= title.id %>' value='<%= title.id %>' <%='checked' if @figure.titles.include?(title) %> ><%= title.name %></li>
    <%end%>
    </ul>
    <h4>Or Enter a New Title Here: <input type='text' name='title[name]' id='new_title'> </h4>

<input type='submit' value='Edit Figure'>

</form>
